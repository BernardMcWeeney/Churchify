---
// src/pages/contact.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact Us - Churchify.ie">
  <Header />
  
  <!-- Page Header - Increased padding and improved spacing -->
  <section class="bg-gradient-to-r from-brand-700 to-brand-800 text-white py-24">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-5xl md:text-6xl font-bold mb-6">Contact Us</h1>
      <p class="text-xl max-w-2xl mx-auto leading-relaxed">Reach out to discuss how we can help your parish embrace digital solutions. We're here to answer your questions.</p>
    </div>
  </section>
  
  <!-- Contact Section -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="flex flex-col lg:flex-row gap-12">
        <!-- Contact Form - Updated with brand colors and border -->
        <div class="lg:w-2/3 bg-white rounded-lg shadow-lg p-8 border-2 border-brand-700 transition-all duration-300 hover:shadow-xl">
          <h2 class="text-2xl font-bold mb-6 text-brand-700">Send Us a Message</h2>
          <form id="contactForm" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-gray-700 font-medium mb-2">Name</label>
                <input type="text" id="name" name="name" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-brand-700 focus:border-brand-700 outline-none transition-colors" placeholder="Your name" required>
              </div>
              <div>
                <label for="email" class="block text-gray-700 font-medium mb-2">Email</label>
                <input type="email" id="email" name="email" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-brand-700 focus:border-brand-700 outline-none transition-colors" placeholder="your.email@example.com" required>
              </div>
            </div>
            
            <div>
              <label for="parish" class="block text-gray-700 font-medium mb-2">Parish Name</label>
              <input type="text" id="parish" name="parish" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-brand-700 focus:border-brand-700 outline-none transition-colors" placeholder="Your parish name">
            </div>
            
            <div class="relative">
              <label for="subject" class="block text-gray-700 font-medium mb-2">Subject</label>
              <div class="relative">
                <select id="subject" name="subject" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-brand-700 focus:border-brand-700 outline-none transition-colors appearance-none bg-white" required>
                  <option value="" disabled selected>Select a subject</option>
                  <option value="Website Inquiry">Website Inquiry</option>
                  <option value="Online Donations">Online Donations</option>
                  <option value="Live Streaming">Live Streaming</option>
                  <option value="Complete Parish Solution">Complete Parish Solution</option>
                  <option value="Other">Other</option>
                </select>
                <div class="absolute inset-y-0 right-0 flex items-center px-2 pointer-events-none">
                  <svg class="w-5 h-5 text-brand-700" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                  </svg>
                </div>
              </div>
            </div>
            
            <div>
              <label for="message" class="block text-gray-700 font-medium mb-2">Message</label>
              <textarea id="message" name="message" rows="5" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:ring-2 focus:ring-brand-700 focus:border-brand-700 outline-none transition-colors" placeholder="Your message" required></textarea>
            </div>
            
            <!-- Turnstile -->
            <div class="cf-turnstile" data-sitekey="YOUR_TURNSTILE_SITE_KEY" data-theme="light"></div>
            
            <div class="flex items-start">
              <input type="checkbox" id="consent" name="consent" class="mt-1 h-4 w-4 text-brand-700 focus:ring-brand-700 border-gray-300 rounded" required>
              <label for="consent" class="ml-2 block text-sm text-gray-600">
                I consent to Churchify.ie collecting and storing my data from this form. Your information will only be used to respond to your inquiry.
              </label>
            </div>
            
            <div>
              <button type="submit" class="bg-brand-700 text-white px-8 py-3 rounded-lg font-medium hover:bg-brand-800 transition-colors inline-block shadow-md hover:shadow-lg transform hover:-translate-y-1">
                Send Message
              </button>
            </div>
          </form>
        </div>
        
        <!-- Contact Information - Updated card borders -->
        <div class="lg:w-1/3 space-y-8">
          <div class="bg-white rounded-lg shadow-lg p-6 border-2 border-brand-700 transform transition-all duration-300 hover:shadow-xl hover:-translate-y-1">
            <div class="bg-brand-100 w-12 h-12 rounded-full flex items-center justify-center mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-brand-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold mb-2 text-brand-700">Email</h3>
            <p class="text-gray-600">Send us an email anytime</p>
            <a href="mailto:info@churchify.ie" class="text-brand-700 font-medium hover:text-brand-600 mt-2 block">info@churchify.ie</a>
          </div>
          
          <div class="bg-white rounded-lg shadow-lg p-6 border-2 border-brand-700 transform transition-all duration-300 hover:shadow-xl hover:-translate-y-1">
            <div class="bg-brand-100 w-12 h-12 rounded-full flex items-center justify-center mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-brand-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold mb-2 text-brand-700">Location</h3>
            <p class="text-gray-600">Our office is located in Meath, but we serve parishes across Ireland</p>
            <address class="not-italic text-gray-600 mt-2">
              Churchify.ie<br>
              County Meath<br>
              Ireland
            </address>
          </div>
          
          <div class="bg-white rounded-lg shadow-lg p-6 border-2 border-brand-700 transform transition-all duration-300 hover:shadow-xl hover:-translate-y-1">
            <div class="bg-brand-100 w-12 h-12 rounded-full flex items-center justify-center mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-brand-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold mb-2 text-brand-700">Office Hours</h3>
            <ul class="text-gray-600 space-y-1">
              <li>Monday - Friday: 9am - 5pm</li>
              <li>Saturday - Sunday: Closed</li>
            </ul>
          </div>
          
          <div class="bg-white rounded-lg shadow-lg p-6 border-2 border-brand-700 transform transition-all duration-300 hover:shadow-xl hover:-translate-y-1">
            <div class="bg-brand-100 w-12 h-12 rounded-full flex items-center justify-center mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-brand-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold mb-2 text-brand-700">Quick Response</h3>
            <p class="text-gray-600">We aim to respond to all inquiries within 24 business hours. For urgent matters, please indicate this in your email subject line.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-20 bg-brand-700 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Transform Your Parish's Digital Presence?</h2>
      <p class="text-xl mb-8 max-w-3xl mx-auto">Join dozens of parishes across Ireland who have embraced digital solutions with Churchify.ie</p>
      <a href="/services" class="bg-white text-brand-700 px-8 py-4 rounded-lg font-bold hover:bg-gray-100 transition-colors inline-block">Explore Our Services</a>
    </div>
  </section>
  
  <Footer />
</Layout>

<script>
  // Simple form validation and submission handler
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contactForm');
    
    if (form) {
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        
        // Here you would typically send the form data to your backend
        // For demonstration purposes, we'll just show an alert
        
        alert('Thank you for your message! We will get back to you soon.');
        form.reset();
      });
    }
  });
</script>