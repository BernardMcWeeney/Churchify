---
// src/pages/about.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import PageHeader from '../components/PageHeader.astro';
import Values from '../components/about/Values.astro';
import Mission from '../components/about/Mission.astro';
import Story from '../components/about/Story.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="About Us - Churchify.ie">
  <Header />
  
  <PageHeader 
    title="About Churchify.ie" 
    tagline="Empowering parishes across Ireland with modern digital solutions." 
  />
  
  <!-- Our Story -->
  <Story />
  
  <!-- Our Mission -->
  <Mission />
  
  <!-- Our Values -->
  <Values />
  
  
  <!-- CTA Section -->
  <section class="py-20 bg-brand-700 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Work With Us?</h2>
      <p class="text-xl mb-8 max-w-3xl mx-auto">Let's discuss how we can help your parish embrace the digital age while preserving your unique traditions and values.</p>
      <a href="/contact" class="bg-white text-brand-700 px-8 py-4 rounded-lg font-bold hover:bg-gray-100 transition-colors inline-block">Contact Our Team</a>
    </div>
  </section>
  
  <Footer />
</Layout>