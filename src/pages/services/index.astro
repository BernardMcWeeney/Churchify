---
// src/pages/services.astro
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Layout title="Our Services - Churchify.ie">
  <Header />
  
  <!-- Page Header - Consistent with other pages -->
  <section class="bg-gradient-to-r from-brand-700 to-brand-800 text-white py-24">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-5xl md:text-6xl font-bold mb-6">Our Services</h1>
      <p class="text-xl max-w-2xl mx-auto leading-relaxed">Comprehensive digital solutions tailored for parishes across Ireland. Explore how we can help your community thrive in the digital age.</p>
    </div>
  </section>
  
  <!-- Services Introduction -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-8 text-brand-700">Complete Parish Digital Solutions</h2>
        <p class="text-gray-600 text-lg mb-8">At Churchify.ie, we understand that each parish has unique needs. Our services are designed to be flexible, affordable, and easy to implement, helping you connect with your community both online and offline.</p>
      </div>
    </div>
  </section>
  
  <!-- Service Cards with ID anchors for direct linking -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <!-- Service 1: Websites -->
      <div id="websites" class="flex flex-col lg:flex-row items-stretch mb-32 bg-white rounded-xl shadow-lg overflow-hidden border-2 border-brand-700">
        <div class="lg:w-1/3 bg-brand-100 p-8 flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-32 w-32 text-brand-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
        </div>
        <div class="lg:w-2/3 p-10">
          <h3 class="text-2xl font-bold mb-6 text-brand-700">Parish Websites</h3>
          <p class="text-gray-600 mb-8">A beautiful, mobile-responsive website tailored specifically for your parish. Our websites are designed to be easily updated by parish staff, with no technical knowledge required.</p>
          
          <h4 class="text-lg font-semibold mb-4 text-brand-700">Features include:</h4>
          <ul class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-brand-700 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Mass and confession schedules</span>
            </li>
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-brand-700 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Parish announcements</span>
            </li>
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-brand-700 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
