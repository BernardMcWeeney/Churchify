}

// Get the service data based on the ID parameter
const { id } = Astro.params;
const { 
  title, 
  description, 
  icon, 
  features, 
  benefits, 
  process, 
  testimonials, 
  caseStudyImage, 
  relatedServices 
} = Astro.props;
---

<Layout title={`${title} - Churchify.ie`}>
  <Header />
  
  <!-- Page Header -->
  <section class="bg-gradient-to-r from-brand-700 to-brand-800 text-white py-24">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-5xl md:text-6xl font-bold mb-6">{title}</h1>
      <p class="text-xl max-w-2xl mx-auto leading-relaxed">{description}</p>
    </div>
  </section>
  
  <!-- Service Overview -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold mb-6 text-brand-700">How We Can Help Your Parish</h2>
          <p class="text-gray-600 mb-6">At Churchify.ie, we understand the unique needs and challenges of parishes. Our {title.toLowerCase()} service is designed specifically to help your parish connect with your community, streamline operations, and fulfill your mission in the digital age.</p>
          
          <h3 class="text-xl font-bold mb-4 text-brand-700">Key Benefits</h3>
          <ul class="space-y-3 mb-8">
            {benefits.map(benefit => (
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-brand-700 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>{benefit}</span>
              </li>
            ))}
          </ul>
          
          <a href="/contact" class="bg-brand-700 text-white px-6 py-3 rounded-lg font-medium hover:bg-brand-800 transition-colors inline-block shadow-md hover:shadow-lg transform hover:-translate-y-1">Schedule a Consultation</a>
        </div>
        <div class="rounded-lg overflow-hidden shadow-lg border-2 border-brand-700">
          <img src={caseStudyImage} alt={`${title} Example`} class="w-full h-auto">
        </div>
      </div>
    </div>
  </section>
  
  <!-- Features Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold mb-4 text-brand-700">Features & Capabilities</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">Our {title.toLowerCase()} service includes everything your parish needs to succeed.</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.slice(0, 9).map((feature, index) => (
          <div class="bg-white p-6 rounded-lg shadow-md border-2 border-brand-700">
            <div class="bg-brand-100 w-12 h-12 rounded-full flex items-center justify-center mb-4">
              <span class="text-brand-700 font-bold text-xl">{index + 1}</span>
            </div>
            <h3 class="text-lg font-bold mb-2 text-brand-700">{feature}</h3>
          </div>
        ))}
      </div>
      
      {features.length > 9 && (
        <div class="mt-12 text-center">
          <h3 class="text-xl font-bold mb-6 text-brand-700">Additional Features</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 max-w-3xl mx-auto">
            {features.slice(9).map(feature => (
              <div class="flex items-start bg-white p-4 rounded-lg shadow-sm border-2 border-brand-700">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-brand-700 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>{feature}</span>
              </div>
            ))}
          </div>
        </div>
      )}
    </div>
  </section>
  
  <!-- Our Process -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold mb-4 text-brand-700">Our Process</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">Here's how we work with you to implement your {title.toLowerCase()} solution.</p>
      </div>
      
      <div class="max-w-4xl mx-auto">
        {process.map((step, index) => (
          <div class="relative flex items-start mb-12 last:mb-0">
            <div class="absolute top-0 left-6 bottom-0 w-0.5 bg-brand-200 -ml-px" style={index === process.length - 1 ? 'display: none;' : ''}></div>
            <div class="flex-shrink-0 w-12 h-12 rounded-full bg-brand-700 text-white flex items-center justify-center z-10">
              <span class="font-bold">{index + 1}</span>
            </div>
            <div class="ml-6">
              <h3 class="text-xl font-bold mb-2 text-brand-700">{step.step}</h3>
              <p class="text-gray-600">{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Testimonials -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold mb-4 text-brand-700">What Our Clients Say</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">Hear from parishes that have transformed their digital presence with our {title.toLowerCase()} service.</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        {testimonials.map(testimonial => (
          <div class="bg-white p-8 rounded-lg shadow-md relative border-2 border-brand-700">
            <div class="text-brand-700 absolute -top-4 left-8">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24">
                <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
              </svg>
            </div>
            <p class="text-gray-600 mb-6 mt-4">"{testimonial.quote}"</p>
            <div class="flex items-center">
              <div>
                <h4 class="font-bold">{testimonial.author}</h4>
                <p class="text-sm text-gray-500">{testimonial.parish}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Related Services -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold mb-4 text-brand-700">Related Services</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">Explore other ways we can help your parish thrive in the digital age.</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        {relatedServices.map(service => {
          // Define service details based on the ID
          const serviceDetails = {
            'websites': {
              title: 'Parish Websites',
              description: 'Beautiful, mobile-responsive websites tailored for your parish.',
              icon: 'M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6'
            },
            'donations': {
              title: 'Online Donations',
              description: 'Secure, easy-to-use donation systems to support your parish.',
              icon: 'M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z'
            },
            'streaming': {
              title: 'Live Streaming',
              description: 'High-quality live streaming solutions for virtual services.',
              icon: 'M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z'
            },
            'complete': {
              title: 'Complete Parish Solution',
              description: 'Everything your parish needs in one integrated package.',
              icon: 'M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4'
            }
          };
          
          const details = serviceDetails[service];
          
          return (
            <div class="bg-white rounded-lg shadow-md overflow-hidden border-2 border-brand-700 transition-transform hover:scale-105">
              <div class="h-24 bg-brand-100 flex items-center justify-center p-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-brand-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={details.icon} />
                </svg>
              </div>
              <div class="p-6">
                <h3 class="text-xl font-bold mb-2 text-brand-700">{details.title}</h3>
                <p class="text-gray-600 mb-4">{details.description}</p>
                <a href={`/services/${service}`} class="text-brand-700 font-medium hover:text-brand-600 inline-flex items-center">
                  Learn more
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-20 bg-brand-700 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Get Started?</h2>
      <p class="text-xl mb-8 max-w-3xl mx-auto">Let's discuss how our {title.toLowerCase()} service can help your parish thrive in the digital age.</p>
      <a href="/contact" class="bg-white text-brand-700 px-8 py-4 rounded-lg font-bold hover:bg-gray-100 transition-colors inline-block shadow-md hover:shadow-lg transform hover:-translate-y-1">Schedule a Consultation</a>
    </div>
  </section>
  
  <Footer />
</Layout>