            </div>
            
            <!-- Light ray effect -->
            <div class="absolute inset-0 bg-gradient-to-t from-transparent to-white/10 transition-all duration-500 group-hover:to-white/20"></div>
          </div>
        </div>
        <div class="p-6">
          <h3 class="text-xl font-bold mb-2 text-brand-700">Holy Trinity Parish</h3>
          <p class="text-gray-600 mb-4">Custom donation platform integrated with parish management system.</p>
          <a href="/portfolio/holy-trinity" class="text-brand-700 font-medium hover:text-brand-600 inline-flex items-center group-hover:underline">
            View Project
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transition-transform duration-300 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </div>
    
    <div class="text-center mt-12">
      <a href="/portfolio" class="bg-brand-700 text-white px-6 py-3 rounded-lg font-medium hover:bg-brand-800 transition-all duration-300 inline-block shadow-md hover:shadow-lg transform hover:-translate-y-1">View All Projects</a>
    </div>
  </div>
</section>