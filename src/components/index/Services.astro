---
// src/components/index/Services.astro
---
<!-- Services Overview -->
<section class="py-16">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold mb-4 text-[color:var(--color-brand)]">Complete Digital Parish Solutions</h2>
      <p class="text-gray-600 max-w-2xl mx-auto">Everything your parish needs to connect with your community and streamline operations.</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Service Card 1 - Green Theme -->
      <div class="bg-white rounded-lg shadow-md overflow-hidden border-2 border-[color:var(--color-brand)] transition-all hover:shadow-xl duration-300 group">
        <div class="h-48 relative overflow-hidden">
          <!-- Stained Glass Background - Green Theme -->
          <div class="absolute inset-0 transition-transform duration-500 group-hover:scale-110">
            <div class="absolute inset-0 bg-gradient-to-br from-[#047857] via-[#04781D] to-[#045F78] opacity-90 transition-opacity duration-500 group-hover:opacity-100"></div>
            
            <!-- Glass panels -->
            <div class="absolute inset-0 grid grid-cols-3 grid-rows-2 transition-all duration-500 group-hover:rotate-1">
              <div class="bg-[#047857]/30 border border-white/10 transition-colors duration-500 group-hover:bg-[#047857]/40"></div>
              <div class="bg-[#04781D]/30 border border-white/10 transition-colors duration-500 group-hover:bg-[#04781D]/40"></div>
              <div class="bg-[#045F78]/30 border border-white/10 transition-colors duration-500 group-hover:bg-[#045F78]/40"></div>
              
              <div class="bg-[#04781D]/30 border border-white/10 transition-colors duration-500 group-hover:bg-[#04781D]/40"></div>
              <div class="bg-[#045F78]/30 border border-white/10 transition-colors duration-500 group-hover:bg-[#045F78]/40"></div>
              <div class="bg-[#047857]/30 border border-white/10 transition-colors duration-500 group-hover:bg-[#047857]/40"></div>
            </div>
            
            <!-- Light ray effect -->
            <div class="absolute inset-0 bg-gradient-to-t from-transparent to-white/10 transition-all duration-500 group-hover:to-white/20"></div>
          </div>
          
          <!-- Icon -->
          <div class="relative z-10 h-full flex items-center justify-center p-6 transition-transform duration-500 group-hover:scale-110">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-white transition-all duration-500 group-hover:drop-shadow-lg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
          </div>
        </div>
        <div class="p-6">
          <h3 class="text-xl font-bold mb-2 text-[color:var(--color-brand)]">Custom Church Websites</h3>
          <p class="text-gray-600 mb-4">Beautiful, mobile-responsive websites tailored for your parish.</p>
          <a href="/services#websites" class="text-[color:var(--color-brand)] font-medium hover:text-[color:var(--color-accent)] inline-flex items-center group-hover:underline">
            Learn more
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transition-transform duration-300 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Service Card 2 - Blue Theme -->
      <div class="bg-white rounded-lg shadow-md overflow-hidden border-2 border-[color:var(--color-brand)] transition-all hover:shadow-xl duration-300 group">
        <div class="h-48 relative overflow-hidden">
          <!-- Stained Glass Background - Blue Theme -->
          <div class="absolute inset-0 transition-transform duration-500 group-hover:scale-110">
            <div class="absolute inset-0 bg-gradient-to-br from-[#045F78] via-[#1D0478] to-[#045F78] opacity-90 transition-opacity duration-500 group-hover:opacity-100"></div>
            
            <!-- Glass panels -->
            <div class="absolute inset-0 grid grid-cols-3 grid-rows-2 transition-all duration-500 group-hover:rotate-1">
              <div class="bg-[#045F78]/30 border border-white/10 transition-colors duration-500 group-hover:bg-[#045F78]/40"></div>
              <div class="bg-[#1D0478]/30 border border-white/10 transition-colors duration-500 group-hover:bg-[#1D0478]/40"></div>
              <div class="bg-[#570478]/30 border border-white/10 transition-colors duration-500 group-hover:bg-[#570478]/40"></div>
              
              <div class="bg-[#1D0478]/30 border border-white/10 transition-colors duration-500 group-hover:bg-[#1D0478]/40"></div>
              <div class="bg-[#570478]/30 border border-white/10 transition-colors duration-500 group-hover:bg-[#570478]/40"></div>
              <div class="bg-[#045F78]/30 border border-white/10 transition-colors duration-500 group-hover:bg-[#045F78]/40"></div>
            </div>
            
            <!-- Light ray effect -->
            <div class="absolute inset-0 bg-gradient-to-t from-transparent to-white/10 transition-all duration-500 group-hover:to-white/20"></div>
          </div>
          
          <!-- Icon -->
          <div class="relative z-10 h-full flex items-center justify-center p-6 transition-transform duration-500 group-hover:scale-110">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-white transition-all duration-500 group-hover:drop-shadow-lg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
        </div>
        <div class="p-6">
          <h3 class="text-xl font-bold mb-2 text-[color:var(--color-brand)]">Online Donations</h3>
          <p class="text-gray-600 mb-4">Secure, easy-to-use donation systems to support your parish.</p>
          <a href="/services#donations" class="text-[color:var(--color-brand)] font-medium hover:text-[color:var(--color-accent)] inline-flex items-center group-hover:underline">
            Learn more
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transition-transform duration-300 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Service Card 3 - Red Theme -->
      <div class="bg-white rounded-lg shadow-md overflow-hidden border-2 border-[color:var(--color-brand)] transition-all hover:shadow-xl duration-300 group">
        <div class="h-48 relative overflow-hidden">
          <!-- Stained Glass Background - Red Theme -->
          <div class="absolute inset-0 transition-transform duration-500 group-hover:scale-110">
            <div class="absolute inset-0 bg-gradient-to-br from-[#780425] via-[#EA1715] to-[#570478] opacity-90 transition-opacity duration-500 group-hover:opacity-100"></div>
            
            <!-- Glass panels -->
            <div class="absolute inset-0 grid grid-cols-3 grid-rows-2 transition-all duration-500 group-hover:rotate-1">
              <div class="bg-[#780425]/30 border border-white/10 transition-colors duration-500 group-hover:bg-[#780425]/40"></div>
              <div class="bg-[#EA1715]/30 border border-white/10 transition-colors duration-500 group-hover:bg-[#EA1715]/40"></div>
              <div class="bg-[#570478]/30 border border-white/10 transition-colors duration-500 group-hover:bg-[#570478]/40"></div>
              
              <div class="bg-[#EA1715]/30 border border-white/10 transition-colors duration-500 group-hover:bg-[#EA1715]/40"></div>
              <div class="bg-[#570478]/30 border border-white/10 transition-colors duration-500 group-hover:bg-[#570478]/40"></div>
              <div class="bg-[#780425]/30 border border-white/10 transition-colors duration-500 group-hover:bg-[#780425]/40"></div>
            </div>
            
            <!-- Light ray effect -->
            <div class="absolute inset-0 bg-gradient-to-t from-transparent to-white/10 transition-all duration-500 group-hover:to-white/20"></div>
          </div>
          
          <!-- Icon -->
          <div class="relative z-10 h-full flex items-center justify-center p-6 transition-transform duration-500 group-hover:scale-110">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-white transition-all duration-500 group-hover:drop-shadow-lg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
            </svg>
          </div>
        </div>
        <div class="p-6">
          <h3 class="text-xl font-bold mb-2 text-[color:var(--color-brand)]">Live Streaming</h3>
          <p class="text-gray-600 mb-4">High-quality live streaming solutions for virtual services.</p>
          <a href="/services#streaming" class="text-[color:var(--color-brand)] font-medium hover:text-[color:var(--color-accent)] inline-flex items-center group-hover:underline">
            Learn more
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transition-transform duration-300 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>