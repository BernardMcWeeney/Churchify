// src/components/index/Features.astro
---
<!-- Why Choose Us -->
<section class="py-16 bg-gray-100">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold mb-4 text-[color:var(--color-brand)]">Why Choose Churchify.ie?</h2>
      <p class="text-gray-600 max-w-2xl mx-auto">We understand the unique needs of parishes and provide tailored solutions.</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Feature 1 - Green Theme -->
      <div class="bg-white p-6 rounded-lg shadow-md border-2 border-[color:var(--color-brand)] transition-all duration-300 hover:shadow-xl group">
        <div class="w-16 h-16 rounded-full overflow-hidden relative mb-4 mx-auto transition-transform duration-300 group-hover:scale-110">
          <!-- Stained Glass Background - Green Theme -->
          <div class="absolute inset-0 transition-transform duration-500 group-hover:scale-110">
            <div class="absolute inset-0 bg-gradient-to-br from-[#047857] via-[#04781D] to-[#045F78] opacity-90 transition-opacity duration-500 group-hover:opacity-100"></div>
            
            <!-- Glass panels -->
            <div class="absolute inset-0 grid grid-cols-2 grid-rows-2 transition-all duration-500 group-hover:rotate-12">
              <div class="bg-[#047857]/30 border border-white/10 transition-colors duration-500 group-hover:bg-[#047857]/40"></div>
              <div class="bg-[#04781D]/30 border border-white/10 transition-colors duration-500 group-hover:bg-[#04781D]/40"></div>
              <div class="bg-[#045F78]/30 border border-white/10 transition-colors duration-500 group-hover:bg-[#045F78]/40"></div>
              <div class="bg-[#04781D]/30 border border-white/10 transition-colors duration-500 group-hover:bg-[#04781D]/40"></div>
            </div>
            
            <!-- Light ray effect -->
            <div class="absolute inset-0 bg-gradient-to-t from-transparent to-white/10 transition-all duration-500 group-hover:to-white/30"></div>
          </div>
          
          <!-- Icon -->
          <div class="relative z-10 h-full w-full flex items-center justify-center transition-transform duration-500 group-hover:scale-110">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white transition-all duration-500 group-hover:drop-shadow-lg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
        <h3 class="text-lg font-bold mb-2 text-center text-[color:var(--color-brand)] transition-all duration-300 group-hover:text-[color:var(--color-accent)]">Affordable Pricing</h3>
        <p class="text-gray-600 text-center">Solutions designed to fit parish budgets of any size.</p>
      </div>
      
